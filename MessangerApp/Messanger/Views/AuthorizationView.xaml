<Window x:Class="Messanger.Views.AuthorizationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messanger.Views"
        mc:Ignorable="d"
        Title="AuthorizationView" Height="450" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center">

            <TextBlock Text="Nickname"
                       HorizontalAlignment="Center"/>
            
            <TextBox Name="NicknameTextBox" 
                     HorizontalContentAlignment="Center"
                     Text="{Binding CurrentUser.Nickname, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBlock Text="Email"
                       HorizontalAlignment="Center"/>

            <TextBox Name="EnailTextBox" 
                     HorizontalContentAlignment="Center"
                     Text="{Binding CurrentUser.Email, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Password"
                       HorizontalAlignment="Center"/>

            <TextBox Name="PasswordTextBox" 
                     HorizontalContentAlignment="Center"
                     Text="{Binding CurrentUser.Password, UpdateSourceTrigger=PropertyChanged}"/>

            <Button x:Name="RegisterButton"
                    Click="RegisterButton_Click"
                    Content="Register"/>

        </StackPanel>
    </Grid>
</Window>
