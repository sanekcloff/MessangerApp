<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region Colors-->
    <SolidColorBrush x:Key="PrimaryColor" Color="#36393F"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#2F3136"/>
    <SolidColorBrush x:Key="TertiaryColor" Color="#202225"/>
    <LinearGradientBrush x:Key="AccentColor" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#9332cb" Offset="0"/>
        <GradientStop Color="#734bd6" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="TextActiveColor" Color="#e9e9e9"/>
    <SolidColorBrush x:Key="TextPassiveColor" Color="#b1b1b1"/>
    <!--#endregion-->
    
    <!--#region Images-->
    <ImageBrush x:Key="BackgroundImage" 
                ImageSource="pack://application:,,,/UI;component/Assets/Backgrounds/retrowave_background.png"
                Stretch="UniformToFill"/>
    <BitmapImage x:Key="Logo"
                 UriSource="pack://application:,,,/UI;component/Assets/Icons/Logos/LogoDark.png"/>
    <BitmapImage x:Key="Icon"
             UriSource="pack://application:,,,/UI;component/Assets/Icons/Logos/Icon.ico"/>
    <!--#endregion-->
    
</ResourceDictionary>